{
    "version": 2,
    "builds": [
      {
        "src": "backend/app.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/build",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.)",
        "dest": "http://localhost:5000/api/$1"
      },
      {
        "src": "/(.)",
        "dest": "/frontend/build/$1"
      }
    ],
    "env": {
      "PORT": "3000"
    }
  }